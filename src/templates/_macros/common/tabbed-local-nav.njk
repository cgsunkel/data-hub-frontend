{##
 # Render tabbed local nav
 # @param {object} props
 # @param {string} [props.items] - nav items
 #
 #}
{% macro TabbedLocalNav(props) %}
  {% if props %}
    <nav class="govuk-tabs" aria-label="local navigation">
      <ul class="govuk-tabs__list govuk-tabs__list--full">
        {% for item in props.items %}
          <li class="govuk-tabs__list-item govuk-tabs__list-item--full">
            <a class="govuk-tabs__tab {{ 'govuk-tabs__tab--selected' if item.isActive }}"
               href="{{ item.url }}">
              {{ item.label }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  {% endif %}
{% endmacro %}
