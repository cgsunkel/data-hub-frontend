{% extends "_layouts/form-wizard-step.njk" %}

{% block form %}
  {% call MultiStepForm({
    buttonText: 'Continue'
  }) %}

    {{ AnswersSummary({
      heading: 'Client details',
      actions: [{
        url: 'client-details/edit'
      }],
      items: [{
        label: 'Company',
        value: values.company.name
      }, {
        label: 'Contact',
        value: values.contact
      }]
    }) }}

    {{ AnswersSummary({
      heading: 'Market (country)',
      actions: [{
        url: 'market/edit'
      }],
      items: [values.primary_market.name]
    }) }}

    {{ AnswersSummary({
      heading: 'Advisers in the UK',
      actions: [{
        url: 'subscribers/edit',
        label: 'Add or remove'
      }],
      items: values.subscribers if values.subscribers.length else ['Not added at this stage']
    }) }}

    <h2 class="heading-medium">What happens next</h2>

    <p>
      Continuing with the order will notify the post manager for {{ values.primary_market.name }}
      {%- if values.subscribers.length -%}
        and {{ values.subscribers | join(", ") }}
      {%- endif -%}
      .
    </p>

    <p>You will not be able to edit the company or market (country) after this point.</p>

  {% endcall %}
{% endblock %}
